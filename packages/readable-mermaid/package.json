{
  "name": "srndpty",
  "version": "0.1.0",
  "description": "Universal interactive diagram framework with JSON-first schemas. Beautiful diagrams that work everywhere.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./vanilla": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "keywords": [
    "diagrams",
    "flowchart",
    "visualization",
    "interactive",
    "accessible",
    "react",
    "typescript",
    "json-schema",
    "universal",
    "serendipity"
  ],
  "author": "Srndpty Team",
  "license": "MIT",
  "homepage": "https://github.com/username/srndpty#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/srndpty.git"
  },
  "bugs": {
    "url": "https://github.com/username/srndpty/issues"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "mermaid": "^10.9.0"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "^18",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^27.0.0",
    "react": "^18",
    "react-dom": "^18",
    "tsup": "^8",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
